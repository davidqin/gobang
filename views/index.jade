extends layout
block content
  script(type="text/coffeescript", src='/javascripts/index.coffee')
  div(class="navbar navbar-inverse")
    div(class="navbar-inner")
      div(class="container")
        a(class="brand",href="#") Gobang
        div(class="nav-collapse subnav-collapse")
          ul(class="nav")
            li
              a(href="http://blog.qinhru.com") My Blog
          ul(class="nav pull-right")
            li(class="divider-vertical")
            li
              a(href="https://github.com/davidqin/gobang") source code on GitHub
  div(class="container-fluid")
    div(class="row-fluid")
      div(class="span3",id="left")
        div(id="players")
        div(id="watchers")
        div(id="functions")
      div(class="span9",id="right")
        div(id="notice")
        div(id="roomList")
        div(id="gamePool")
        div(id="dlgBg")
        div(id="login",class="well form-inline")
          h3 Nickname:
          input(type="text",maxlength="10",id="nickname")
          button(id="loginBtn",class="btn btn-success") Join